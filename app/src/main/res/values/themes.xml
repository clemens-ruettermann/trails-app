<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trails" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="Theme.Trails.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trails.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Trails.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Trails.EventEnrolled">
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="Theme.Trails.EventEnrollmentPossible">
        <item name="android:background">@color/enrollment_for_event_possible_light</item>
    </style>

    <style name="Theme.Trails.EventEnrollmentNotPossible">
        <item name="android:background">@color/light_red</item>
    </style>


</resources>